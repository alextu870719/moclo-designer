{
  "name": "moclo-designer",
  "version": "1.0.0",
  "description": "MoClo-focused Golden Gate cloning design tool with plasmid database",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode=development",
    "build:watch": "npm run build:renderer -- --watch",
    "test": "jest",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron": "^29",
    "sqlite3": "^5.1.7",
    "react": "^18",
    "react-dom": "^18",
    "lucide-react": "^0.263.1",
    "@teselagen/ove": "^0.7.36",
    "@teselagen/bio-parsers": "^0.4.28",
    "@teselagen/sequence-utils": "^0.3.32",
    "redux": "^4.2.1",
    "react-redux": "^8.1.3",
    "@blueprintjs/core": "^3.54.0",
    "@blueprintjs/icons": "^3.33.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "webpack": "^5",
    "webpack-cli": "^5",
    "html-webpack-plugin": "^5",
    "ts-loader": "^9",
    "css-loader": "^6",
    "style-loader": "^3",
    "concurrently": "^8",
    "electron-builder": "^24",
    "jest": "^29",
    "ts-jest": "^29",
    "@types/jest": "^29"
  },
  "build": {
    "appId": "com.moclo.designer",
    "productName": "MoClo Designer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "database/**/*",
      "package.json"
    ],
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": "nsis"
    }
  }
}
